<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="per.jxnflzc.persistence.LineItemDAO">
    <select id="getLineItemsByOrderId" resultType="per.jxnflzc.domain.LineItem">
        select * from lineitem where orderid=#{orderId}
    </select>
    <insert id="insertLineItem" useGeneratedKeys="true" keyProperty="linenum" parameterType="per.jxnflzc.domain.LineItem">
        insert into lineitem(orderid,itemid,quantity,unitprice) values(#{oderId},#{itemId},#{quantity},#{unitprice})
    </insert>
</mapper>